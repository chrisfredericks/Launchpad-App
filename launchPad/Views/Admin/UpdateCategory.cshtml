@model launchPad.Models.Category

<div class="row">
    <div class="pr-3">
        <h1>_launchPad.</h1>
    </div>
    <div class="pt-3 pr-3 pl-3">
        <h5>Administration</h5>
    </div>
    <div class="pt-3 pl-3">
        <h5><a href="@Url.Action("Logout", "Login")">Logout</a></h5>
    </div>
</div>

<div class="row my-2">
    <div class="col">
        <h4>Edit Category</h4>
        
        <div style="margin-bottom:10px">Update customer information:</div>        
        <form asp-controller="Admin" asp-action="UpdateSubmit">
            <input type="hidden" asp-for="Id"  />

            <div class="form-group">
                <label asp-for="category"></label>
                <input type="text" asp-for="category" class="form-control" maxlength="40" />
                <span asp-validation-for="category" class="text-danger"/>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-warning" Text="Change" />
                <a asp-controller="Admin" asp-action="Start"><input type="button" class="btn btn-warning" value="Cancel" /></a>
            </div>
        </form>

    </div>
</div>

@section scripts {
    <script>startAutoLogout();</script>
}