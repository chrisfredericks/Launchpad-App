@model launchPad.Models.Link

<div class="row my-2">
    <div class="col">
        <h4>Add Customer</h4>
        <div style="margin-bottom:10px">Enter data for new customer:</div>
        <h3>Category: @ViewBag.catName</h3>
        
        <form method="post">
            
            <div class="form-group">
                <label>Label</label>
                <input type="text" asp-for="label" class="form-control" maxlength="100" />
                <span asp-validation-for="label" class="text-danger" />
            </div>            
            <div class="form-group">
                <label>href</label>
                <input type="text" asp-for="href" class="form-control" maxlength="100" />
                <span asp-validation-for="href" class="text-danger" />
            </div>            
            <div class="form-group">
                <label>Pinned</label>
                <input type="checkbox" asp-for="pinned" onclick="$(this).val(this.checked ? 1 : 0)"/> Pinned to Top
            </div>
            
            <div class="form-group">
                <input type="hidden" asp-for="categoryId" value="@ViewBag.catId" />
            </div>

            
            <div class="form-group">
                <input type="submit" asp-controller="Admin" asp-action="AddSubmit" class="btn btn-warning" Text="Add" />
                <a asp-controller="Admin" asp-action="Index"><input type="button" class="btn btn-warning" value="Cancel" /></a>
            </div>
        </form>

    </div>
</div>